{
  "$schema": "https://antigravity.dev/schemas/workspace-config.json",
  "name": "clawdbot",
  "description": "Docker deployment & distributed worker management for Clawdbot",

  "onOpen": {
    "setupScript": "scripts/project-setup.sh",
    "allowDirenv": true,
    "timeout": 30,
    "notifications": {
      "onReady": "Clawdbot environment ready",
      "onError": "Setup failed - check logs"
    }
  },

  "security": {
    "note": "Secrets loaded via 1Password references in .env and .envrc",
    "envFiles": [".env"],
    "secretPatterns": {
      "warn": ["sk-ant-", "sk-", "AKIA", "ghp_", "gho_"],
      "allow": ["op://"]
    }
  },

  "mcpServers": {
    "extends": ".antigravity/mcp_config.json"
  },

  "tasks": {
    "deploy": {
      "command": "./scripts/deploy-secure.sh",
      "description": "Deploy with Docker security hardening"
    },
    "verify": {
      "command": "./scripts/verify-security.sh",
      "description": "Run security verification checks"
    },
    "tw-status": {
      "command": "~/bin/tw status",
      "description": "Check TW Mac distributed worker status"
    }
  }
}
